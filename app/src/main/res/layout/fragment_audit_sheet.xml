<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.audit_sheet.AuditSheetActivity$PlaceholderFragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_criterion_description"
        style="@style/TextAppearance.MSPO.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal"
        tools:text="Ch : Production area identification" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal">

        <LinearLayout
            android:id="@+id/task_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="horizontal"/>

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/criteria_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>