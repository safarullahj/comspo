<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.audit_sheet.AuditSheetActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_criterion_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/line.spacing.normal"
            android:text="Ch : Production area identification"
            android:textColor="@color/container_detail"
            android:textSize="@dimen/spacing.18dp"
            android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/criteria_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>