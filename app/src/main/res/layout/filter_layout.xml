<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing.8dp"
    android:background="@color/bg_login">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:textColor="@color/white"
        android:text="STATUS"/>


    <RadioGroup
        android:id="@+id/statusRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing.8dp"
        android:layout_marginLeft="@dimen/spacing.16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rad_showAll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing.26dp"
            android:checked="true"
            android:textColor="@color/white"
            android:text="SHOW ALL"
            android:textSize="@dimen/spacing.20dp" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rad_newlyAssigned"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing.26dp"
            android:textColor="@color/white"
            android:text="NEWLY ASSIGNED"
            android:textSize="@dimen/spacing.20dp"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rad_pending"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing.26dp"
            android:textColor="@color/white"
            android:text="PENDING"
            android:textSize="@dimen/spacing.20dp"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rad_onGoing"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing.26dp"
            android:textColor="@color/white"
            android:text="ON GOING"
            android:textSize="@dimen/spacing.20dp"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rad_notApproved"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing.26dp"
            android:textColor="@color/white"
            android:text="NOT APPROVED"
            android:textSize="@dimen/spacing.20dp"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rad_approved"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing.26dp"
            android:textColor="@color/white"
            android:text="APPROVED"
            android:textSize="@dimen/spacing.20dp"/>

    </RadioGroup>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:textColor="@color/white"
        android:text="Year"
        android:layout_marginTop="@dimen/spacing.12dp"/>

    <Spinner
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing.26dp"
        android:paddingRight="@dimen/spacing.26dp"
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:textColor="@color/white"
        android:text="Search Audit"
        android:layout_marginTop="@dimen/spacing.12dp"/>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing.8dp"
        android:layout_marginLeft="@dimen/spacing.16dp"
        android:layout_marginRight="@dimen/spacing.12dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="Search . . . ."
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:padding="@dimen/spacing.12dp">


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/btn_login_bg"
        android:text="FILTER"
        android:textColor="@color/btn_login"
        android:layout_marginRight="@dimen/spacing.12dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgReset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:layout_marginLeft="@dimen/spacing.12dp"/>

    </LinearLayout>

</LinearLayout>