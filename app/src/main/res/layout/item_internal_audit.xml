<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackgroundBorderless">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal"
        tools:ignore="MissingPrefix">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView_audit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Audit Id:"
            android:textSize="@dimen/spacing_normal"
            android:textStyle="bold" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView_audit_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:paddingRight="@dimen/spacing_normal"
            android:singleLine="true"
            android:text="Year : 2018"
            android:textSize="@dimen/spacing_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/spacing_normal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_audit_status_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:ellipsize="end"
                android:text="@string/status_"
                android:textSize="@dimen/spacing_normal" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_audit_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:ellipsize="end"
                android:text=""
                android:textSize="@dimen/spacing_normal" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>