<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/task_status_container">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/taskStatusImage"
            android:layout_width="@dimen/roundPic"
            android:layout_height="@dimen/roundPic"
            android:visibility="visible"
            app:srcCompat="@drawable/default_icon" />


        <ImageView
            android:id="@+id/taskStatusdash"
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:src="@drawable/dotted"
            android:layerType="software" />


    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/taskStatusText"
        style="@style/TextAppearance.MSPO.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/spacing_tiny"
        android:text="1.1" />





</LinearLayout>